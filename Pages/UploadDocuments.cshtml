@page
@model Iamsigner_Integration.Pages.UploadDocumentsModel
@{
}
<div class="container">
    <h1 class="mt-5">Upload Documents</h1>
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <ul>
                @foreach (var modelStateEntry in ModelState.Values)
                {
                    foreach (var error in modelStateEntry.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Document.docName">Document Name:</label>
            <input asp-for="Document.docName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Document.docExtension">Document Extension:</label>
            <input asp-for="Document.docExtension" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Document.docFile">Choose File:</label>
            <input asp-for="DocumentFile" type="file" class="form-control-file" />
        </div>
        <div class="form-group">
            <label asp-for="Document.isPasswordProtected">Is Password Protected:</label>
            <input asp-for="Document.isPasswordProtected" type="checkbox" class="form-check-input" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>